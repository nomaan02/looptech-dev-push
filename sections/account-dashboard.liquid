    <div class="account-panel is-active" id="orders" role="tabpanel" data-panel="orders">
      <header class="account-header">
        <h1 class="account-header__title">Orders</h1>
        <p class="account-header__subtitle">Delivery tracking, customer service, etc.</p>
      </header>

      {%- if customer.orders.size > 0 -%}
        <div class="orders-list">
          {%- for order in customer.orders -%}
            {%- comment -%} Calculate order progress based on fulfillment status {%- endcomment -%}
            {%- liquid
              assign progress_percent = 25
              assign step_1_complete = true
              assign step_2_complete = false
              assign step_3_complete = false
              assign step_4_complete = false
              
              if order.fulfillment_status == 'fulfilled' or order.fulfillment_status == 'partial'
                assign step_2_complete = true
                assign step_3_complete = true
                assign step_4_complete = true
                assign progress_percent = 100
              elsif order.financial_status == 'paid'
                assign step_2_complete = true
                assign progress_percent = 50
              endif
            -%}

            <div class="order-card" data-order-id="{{ order.id }}">
              {%- comment -%} Main Card Body - 3 Column Layout {%- endcomment -%}
              <div class="order-card__body">
                {%- comment -%} Left Column - Product Image {%- endcomment -%}
                {%- for line_item in order.line_items limit: 1 -%}
                  <div class="order-card__image">
                    {%- if line_item.image -%}
                      <img src="{{ line_item.image | image_url: width: 320 }}" alt="{{ line_item.title }}" loading="lazy">
                    {%- elsif line_item.product.featured_image -%}
                      <img src="{{ line_item.product.featured_image | image_url: width: 320 }}" alt="{{ line_item.title }}" loading="lazy">
                    {%- else -%}
                      <div class="order-card__image-placeholder">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="1.5">
                          <path stroke-linecap="round" stroke-linejoin="round" d="M2.25 15.75l5.159-5.159a2.25 2.25 0 013.182 0l5.159 5.159m-1.5-1.5l1.409-1.409a2.25 2.25 0 013.182 0l2.909 2.909m-18 3.75h16.5a1.5 1.5 0 001.5-1.5V6a1.5 1.5 0 00-1.5-1.5H3.75A1.5 1.5 0 002.25 6v12a1.5 1.5 0 001.5 1.5zm10.5-11.25h.008v.008h-.008V8.25zm.375 0a.375.375 0 11-.75 0 .375.375 0 01.75 0z" />
                        </svg>
                      </div>
                    {%- endif -%}
                  </div>

                  {%- comment -%} Middle Column - Order Info + Progress {%- endcomment -%}
                  <div class="order-card__main">
                    <div class="order-card__info">
                      <p class="order-card__number">Order <span>#{{ order.order_number }}</span></p>
                      <h3 class="order-card__title">{{ line_item.title }}{% if line_item.variant_title != 'Default Title' and line_item.variant_title != blank %} ({{ line_item.variant_title }}){% endif %}</h3>
                    </div>

                    {%- comment -%} Progress Tracker {%- endcomment -%}
                    <div class="order-progress">
                      <div class="order-progress__line" style="width: {{ progress_percent }}%;"></div>
                      
                      <div class="order-progress__step {% if step_1_complete %}is-complete{% endif %}">
                        <div class="order-progress__dot"></div>
                        <span class="order-progress__label">Ordered</span>
