<script>
/**
 * LoopTech Account Dashboard
 * Tab switching, order details toggle, and interactions
 */
(function() {
  'use strict';

  document.addEventListener('DOMContentLoaded', function() {
    const tabs = document.querySelectorAll('.account-tabs__link');
    const panels = document.querySelectorAll('.account-panel');
    const toggleSwitches = document.querySelectorAll('.account-toggle__switch');
    const orderToggles = document.querySelectorAll('[data-toggle-details]');

    // Tab switching
    function showTab(tabId) {
      // Update tabs
      tabs.forEach(function(tab) {
        if (tab.dataset.tab === tabId) {
          tab.classList.add('is-active');
        } else {
          tab.classList.remove('is-active');
        }
      });

      // Update panels
      panels.forEach(function(panel) {
        if (panel.dataset.panel === tabId) {
          panel.classList.add('is-active');
        } else {
          panel.classList.remove('is-active');
        }
      });

      // Update URL hash
      if (history.replaceState) {
        history.replaceState(null, null, '#' + tabId);
      }
    }

    // Tab click handlers
    tabs.forEach(function(tab) {
      tab.addEventListener('click', function(e) {
        e.preventDefault();
        showTab(this.dataset.tab);
      });
    });

    // Check URL hash on load
    const hash = window.location.hash.replace('#', '');
    if (hash && document.querySelector('[data-panel="' + hash + '"]')) {
      showTab(hash);
    }

    // Order details toggle
    orderToggles.forEach(function(toggle) {
      toggle.addEventListener('click', function() {
        const isOpen = this.classList.toggle('is-open');
        const details = this.nextElementSibling;
        
        if (details && details.classList.contains('order-card__details')) {
          details.classList.toggle('is-open', isOpen);
          this.setAttribute('aria-expanded', isOpen);
          details.setAttribute('aria-hidden', !isOpen);
        }
      });
    });

    // Toggle switches
    toggleSwitches.forEach(function(toggle) {
      toggle.addEventListener('click', function() {
        this.classList.toggle('is-active');
        // In a real implementation, this would send an AJAX request to update preferences
      });
    });

    // Edit buttons (placeholder functionality)
    document.querySelectorAll('[data-edit]').forEach(function(btn) {
      btn.addEventListener('click', function() {
        alert('Edit functionality coming soon!');
      });
    });

    // Action links
    document.querySelectorAll('[data-action="change-password"]').forEach(function(link) {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        alert('Password change functionality coming soon!');
      });
    });

    document.querySelectorAll('[data-action="delete-account"]').forEach(function(link) {
      link.addEventListener('click', function(e) {
        e.preventDefault();
        if (confirm('Are you sure you want to delete your account? This action cannot be undone.')) {
          alert('Account deletion request submitted. You will receive a confirmation email.');
        }
      });
    });
  });
})();
</script>

