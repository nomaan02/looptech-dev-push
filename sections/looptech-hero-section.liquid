{% comment %}
  Looptech Hero Section
  ====================
  A hero banner grid with full-width welcome banner and promotional tiles.
  
  INSTALLATION:
  1. Copy this entire file to your theme's 'sections' folder
  2. In Shopify Admin, go to Online Store > Themes > Customize
  3. Click "Add section" and select "Looptech Hero Section"
  4. Configure the settings in the customizer sidebar
  
  File: sections/looptech-hero-section.liquid
{% endcomment %}

{{ 'looptech-hero.css' | asset_url | stylesheet_tag }}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Caveat:wght@500;600&display=swap');

  .looptech-hero {
    --lt-purple: 270, 60%, 25%;
    --lt-navy: 240, 40%, 15%;
    --lt-dark: 0, 0%, 10%;
    font-family: 'Inter', sans-serif;
  }

  .looptech-hero * {
    box-sizing: border-box;
  }

  .looptech-hero-container {
    max-width: 1400px;
    margin: 0 auto;
    padding: 2rem 1rem;
  }

  /* Full Width Welcome Banner */
  .looptech-welcome-banner {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    background: linear-gradient(135deg, hsl(var(--lt-navy)) 0%, hsl(var(--lt-purple)) 100%);
    padding: 3rem;
    min-height: 320px;
    display: flex;
    align-items: center;
  }

  .looptech-welcome-banner::before {
    content: '';
    position: absolute;
    top: 0;
    right: 25%;
    width: 24rem;
    height: 24rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    filter: blur(48px);
  }

  .looptech-welcome-banner::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 33%;
    width: 16rem;
    height: 16rem;
    background: rgba(167, 139, 250, 0.1);
    border-radius: 50%;
    filter: blur(32px);
  }

  .looptech-banner-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100%;
  }

  @media (min-width: 768px) {
    .looptech-banner-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .looptech-banner-text {
    flex: 1;
    max-width: 32rem;
  }

  .looptech-banner-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.5rem 0;
    line-height: 1.1;
  }

  @media (min-width: 768px) {
    .looptech-banner-title {
      font-size: 3rem;
    }
  }

  .looptech-banner-subtitle {
    font-size: 1.875rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .looptech-banner-subtitle {
      font-size: 2.25rem;
    }
  }

  .looptech-banner-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (min-width: 768px) {
    .looptech-banner-description {
      font-size: 1.125rem;
    }
  }

  /* Curved Arrow */
  .looptech-arrow {
    display: none;
  }

  @media (min-width: 768px) {
    .looptech-arrow {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .looptech-arrow svg {
    color: rgba(255, 255, 255, 0.6);
  }

  /* iPad Placeholder */
  .looptech-device-preview {
    flex: 1;
    max-width: 16rem;
    display: flex;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .looptech-device-preview {
      justify-content: flex-end;
    }
  }

  .looptech-device-frame {
    position: relative;
    width: 16rem;
    height: 20rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 0.75rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    transform: rotate(3deg);
    transition: transform 0.5s ease;
  }

  .looptech-device-frame:hover {
    transform: rotate(0deg);
  }

  .looptech-device-screen {
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.05));
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .looptech-device-content {
    text-align: center;
  }

  .looptech-device-logo {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 0.75rem;
    border-radius: 0.75rem;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .looptech-device-logo span {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .looptech-device-label {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
    margin: 0;
  }

  /* Promo Tiles Grid */
  .looptech-promo-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: 1rem;
    margin-top: 1rem;
  }

  @media (min-width: 768px) {
    .looptech-promo-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .looptech-promo-left {
    display: flex;
    flex-direction: column;
    gap: 1rem;
  }

  .looptech-promo-right {
    height: 100%;
  }

  /* Base Promo Tile */
  .looptech-promo-tile {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    padding: 1.5rem;
    min-height: 160px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .looptech-promo-tile:hover {
    transform: scale(1.02);
  }

  .looptech-promo-tile.full-height {
    height: 100%;
    min-height: 336px;
  }

  /* Shark Tile */
  .looptech-tile-shark {
    background: linear-gradient(135deg, hsl(240, 20%, 12%) 0%, hsl(240, 30%, 20%) 100%);
  }

  /* Black Friday Tile */
  .looptech-tile-friday {
    background: linear-gradient(135deg, hsl(280, 50%, 30%) 0%, hsl(270, 60%, 45%) 100%);
  }

  /* Apple Tile */
  .looptech-tile-apple {
    background: linear-gradient(135deg, hsl(220, 50%, 15%) 0%, hsl(240, 40%, 25%) 100%);
  }

  .looptech-tile-title {
    position: relative;
    z-index: 10;
    flex: 1;
  }

  .looptech-tile-title-line {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .looptech-tile-title-line {
      font-size: 1.875rem;
    }
  }

  .looptech-tile-title-sub {
    display: block;
    font-size: 1.25rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 0.25rem;
  }

  .looptech-tile-title-muted {
    color: rgba(255, 255, 255, 0.9);
  }

  .looptech-handwritten {
    font-family: 'Caveat', cursive;
    font-size: 2.5rem;
  }

  @media (min-width: 768px) {
    .looptech-handwritten {
      font-size: 3rem;
    }
  }

  /* Shop Now Button */
  .looptech-shop-btn {
    position: relative;
    z-index: 10;
    display: inline-block;
    padding: 0.625rem 1.25rem;
    background: #ffffff;
    color: hsl(240, 10%, 10%);
    font-weight: 600;
    border-radius: 9999px;
    font-size: 0.875rem;
    text-decoration: none;
    border: none;
    cursor: pointer;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: background 0.2s ease;
    margin-top: 1rem;
  }

  .looptech-shop-btn:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  /* Decorative Elements */
  .looptech-shark-fin {
    position: absolute;
    right: 1rem;
    bottom: 4rem;
    opacity: 0.3;
  }

  .looptech-phones {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 0.5rem;
  }

  .looptech-phone {
    width: 3rem;
    height: 6rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    backdrop-filter: blur(4px);
  }

  .looptech-phone:first-child {
    transform: rotate(-12deg);
  }

  .looptech-phone:last-child {
    transform: rotate(6deg);
    margin-top: 1rem;
    background: rgba(255, 255, 255, 0.15);
  }

  .looptech-apple-grid {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
    opacity: 0.6;
  }

  .looptech-apple-item {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
  }

  .looptech-apple-item:nth-child(1) { width: 3rem; height: 4rem; }
  .looptech-apple-item:nth-child(2) { width: 3rem; height: 4rem; background: rgba(255, 255, 255, 0.15); }
  .looptech-apple-item:nth-child(3) { width: 3rem; height: 2.5rem; }
  .looptech-apple-item:nth-child(4) { width: 3rem; height: 3rem; border-radius: 50%; background: rgba(255, 255, 255, 0.15); }
  .looptech-apple-item:nth-child(5) { width: 3rem; height: 3.5rem; }
  .looptech-apple-item:nth-child(6) { width: 3rem; height: 2rem; background: rgba(255, 255, 255, 0.15); }
</style>

<div class="looptech-hero">
  <div class="looptech-hero-container">
    
    {%- comment -%} Full Width Welcome Banner {%- endcomment -%}
    <div class="looptech-welcome-banner">
      <div class="looptech-banner-content">
        
        {%- comment -%} Left Content {%- endcomment -%}
        <div class="looptech-banner-text">
          <h1 class="looptech-banner-title">{{ section.settings.banner_title }}</h1>
          <h2 class="looptech-banner-subtitle">{{ section.settings.banner_subtitle }}</h2>
          <p class="looptech-banner-description">{{ section.settings.banner_description }}</p>
        </div>

        {%- comment -%} Curved Arrow {%- endcomment -%}
        <div class="looptech-arrow">
          <svg width="120" height="80" viewBox="0 0 120 80" fill="none">
            <path d="M10 60 Q 60 10 110 40" stroke="currentColor" stroke-width="3" stroke-linecap="round" fill="none"/>
            <path d="M100 30 L 110 40 L 98 48" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
          </svg>
        </div>

        {%- comment -%} Device Preview {%- endcomment -%}
        <div class="looptech-device-preview">
          <div class="looptech-device-frame">
            <div class="looptech-device-screen">
              <div class="looptech-device-content">
                <div class="looptech-device-logo">
                  <span>{{ section.settings.device_logo_letter }}</span>
                </div>
                <p class="looptech-device-label">{{ section.settings.device_label }}</p>
              </div>
            </div>
          </div>
        </div>
        
      </div>
    </div>

    {%- comment -%} Promo Tiles Grid {%- endcomment -%}
    <div class="looptech-promo-grid">
      
      {%- comment -%} Left Column - Stacked Tiles {%- endcomment -%}
      <div class="looptech-promo-left">
        
        {%- comment -%} Shark Tile {%- endcomment -%}
        <div class="looptech-promo-tile looptech-tile-shark">
          <div class="looptech-tile-title">
            <span class="looptech-tile-title-line">{{ section.settings.tile1_line1 }}</span>
            <span class="looptech-tile-title-line">{{ section.settings.tile1_line2 }}</span>
            <span class="looptech-tile-title-sub">{{ section.settings.tile1_subtitle }}</span>
          </div>
          <div class="looptech-shark-fin">
            <svg width="100" height="80" viewBox="0 0 100 80" fill="white">
              <path d="M50 0 L80 80 L20 80 Z"/>
            </svg>
          </div>
          <a href="{{ section.settings.tile1_link }}" class="looptech-shop-btn">Shop Now</a>
        </div>

        {%- comment -%} Black Friday Tile {%- endcomment -%}
        <div class="looptech-promo-tile looptech-tile-friday">
          <div class="looptech-tile-title">
            <span class="looptech-tile-title-line">{{ section.settings.tile2_line1 }}</span>
            <span class="looptech-tile-title-line">{{ section.settings.tile2_line2 }}</span>
          </div>
          <div class="looptech-phones">
            <div class="looptech-phone"></div>
            <div class="looptech-phone"></div>
          </div>
          <a href="{{ section.settings.tile2_link }}" class="looptech-shop-btn">Shop Now</a>
        </div>
        
      </div>

      {%- comment -%} Right Column - Tall Apple Tile {%- endcomment -%}
      <div class="looptech-promo-right">
        <div class="looptech-promo-tile looptech-tile-apple full-height">
          <div class="looptech-tile-title">
            <span class="looptech-tile-title-line looptech-tile-title-muted">{{ section.settings.tile3_line1 }}</span>
            <span class="looptech-tile-title-line looptech-handwritten">{{ section.settings.tile3_line2 }}</span>
            <span class="looptech-tile-title-line looptech-tile-title-muted">{{ section.settings.tile3_line3 }}</span>
          </div>
          <div class="looptech-apple-grid">
            <div class="looptech-apple-item"></div>
            <div class="looptech-apple-item"></div>
            <div class="looptech-apple-item"></div>
            <div class="looptech-apple-item"></div>
            <div class="looptech-apple-item"></div>
            <div class="looptech-apple-item"></div>
          </div>
          <a href="{{ section.settings.tile3_link }}" class="looptech-shop-btn">Shop Now</a>
        </div>
      </div>
      
    </div>
    
  </div>
</div>

