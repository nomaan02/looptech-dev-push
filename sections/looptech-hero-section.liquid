        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Shark Megasale"
        },
        {
          "type": "header",
          "content": "Button"
        },
        {
          "type": "checkbox",
          "id": "show_button",
          "label": "Show Button",
