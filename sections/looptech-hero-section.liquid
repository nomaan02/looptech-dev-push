        },
        {
          "type": "text",
          "id": "subtitle",
          "label": "Subtitle",
          "default": "Wow! That's New."
        },
        {
          "type": "checkbox",
          "id": "show_description",
          "label": "Show Description",
          "default": true
        },
        {
          "type": "textarea",
          "id": "description",
          "label": "Description",
          "default": "Discover our new toggle feature! Switch between brand new and renewed products with a single click. Same quality, smarter choices."
        },
        {
          "type": "header",
          "content": "Device Preview"
        },
        {
          "type": "checkbox",
          "id": "show_device",
          "label": "Show Device Preview",
          "default": true
        },
        {
