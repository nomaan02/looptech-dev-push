{% comment %}
  Looptech Hero Section - Block-Based Architecture
  =================================================
  A hero banner grid with full-width welcome banner and promotional tiles.
  Each tile is a separate block with its own editable settings.

  INSTALLATION:
  1. Copy this entire file to your theme's 'sections' folder
  2. In Shopify Admin, go to Online Store > Themes > Customize
  3. Click "Add section" and select "Looptech Hero Section"
  4. Add blocks for each tile you want to display
  5. Configure each block's settings independently

  File: sections/looptech-hero-section.liquid
{% endcomment %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Caveat:wght@500;600&display=swap');

  .looptech-hero {
    --lt-purple: 270, 60%, 25%;
    --lt-navy: 240, 40%, 15%;
    --lt-dark: 0, 0%, 10%;
    font-family: 'Inter', sans-serif;
  }

  .looptech-hero * {
    box-sizing: border-box;
  }

  .looptech-hero-container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px;
  }

  /* Full Width Welcome Banner */
  .looptech-welcome-banner {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    padding: 0;
    min-height: 160px;              /* Reduced by 50% from 320px */
    height: 160px;                  /* Fixed height to match other tiles */
    display: flex;
    align-items: center;
  }

  @media (min-width: 768px) {
    .looptech-welcome-banner {
      height: 180px;                /* Match other tiles on larger screens */
    }
  }

  /* Background image for welcome banner */
  .looptech-welcome-banner-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    object-position: center;
    opacity: 1;
    z-index: 1;
    border-radius: 1rem;
  }

  /* Gradient overlay for welcome banner */
  .looptech-welcome-gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    border-radius: 1rem;
    pointer-events: none;
  }

  .looptech-welcome-gradient-overlay.with-image {
    opacity: 0.85;
  }

  .looptech-welcome-gradient-overlay.no-image {
    opacity: 1;
  }

  .looptech-banner-content {
    position: relative;
    z-index: 10;
    padding: 1.5rem 2rem;
    width: 100%;
    height: 100%;
    display: flex;
    align-items: center;
  }

  .looptech-banner-text {
    flex: 1;
    max-width: 100%;
  }

  .looptech-banner-title {
    font-size: 1.5rem;              /* Reduced for smaller container */
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.25rem 0;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .looptech-banner-title {
      font-size: 1.875rem;           /* Match other tile titles */
    }
  }

  .looptech-banner-subtitle {
    font-size: 1.25rem;              /* Reduced for smaller container */
    font-weight: 600;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 0.5rem 0;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .looptech-banner-subtitle {
      font-size: 1.5rem;
    }
  }

  .looptech-banner-description {
    color: rgba(255, 255, 255, 0.8);
    font-size: 0.875rem;             /* Reduced for smaller container */
    line-height: 1.4;
    margin: 0;
  }

  @media (min-width: 768px) {
    .looptech-banner-description {
      font-size: 1rem;
    }
  }


  /* Promo Tiles Grid */
  .looptech-promo-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.tile_gap }}px;
    margin-top: {{ section.settings.tile_gap }}px;
  }

  @media (min-width: 768px) {
    .looptech-promo-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .looptech-promo-left {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.tile_gap }}px;
  }

  .looptech-promo-right {
    height: 100%;
  }

  /* Base Promo Tile */
  .looptech-promo-tile {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    padding: 0;                      /* Remove padding to allow image to fill entire tile */
    height: 160px;                  /* Fixed height instead of min-height */
    display: flex;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  @media (min-width: 768px) {
    .looptech-promo-tile {
      height: 180px;                /* Slightly taller on larger screens */
    }
  }

  .looptech-promo-tile:hover {
    transform: scale(1.02);
  }

  .looptech-promo-tile.full-height {
    height: 100%;
    min-height: 336px;              /* Keeps min-height for full-height variant */
  }

  /* Content wrapper for maintaining padding */
  .looptech-tile-content {
    position: relative;
    z-index: 10;
    padding: 1.5rem;
    width: 100%;
    height: 100%;
    display: flex;
    flex-direction: column;
    justify-content: flex-start;
  }

  /* Tile style classes - no background since it's handled by gradient overlay */
  .looptech-tile-shark,
  .looptech-tile-friday,
  .looptech-tile-apple {
    /* Styles are now applied via the gradient overlay */
  }

  .looptech-tile-title {
    position: relative;
    z-index: 10;
    flex: 0 0 auto;                 /* Don't grow, maintain natural size */
  }

  .looptech-tile-title-line {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .looptech-tile-title-line {
      font-size: 1.875rem;
    }
  }

  .looptech-tile-title-sub {
    display: block;
    font-size: 1.25rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 0.25rem;
  }

  .looptech-tile-title-muted {
    color: rgba(255, 255, 255, 0.9);
  }

  .looptech-handwritten {
    font-family: 'Caveat', cursive;
    font-size: 2.5rem;
  }

  @media (min-width: 768px) {
    .looptech-handwritten {
      font-size: 3rem;
    }
  }

  /* Shop Now Button */
  .looptech-shop-btn {
    position: relative;
    z-index: 10;

    display: inline-flex;
    align-items: center;
    justify-content: center;
    gap: 0.5rem;
    align-self: flex-start;        /* Prevents stretching in flex container */

    padding: 0.5rem 1.5rem;        /* Reduced from 0.625rem for 20% height reduction */
    min-height: 32px;              /* Reduced from 40px (20% reduction) */
    width: fit-content;            /* Ensures consistent width based on content */


    background: #ffffff;
    color: hsl(240, 10%, 10%);
    font-weight: 600;
    border-radius: 9999px;
    font-size: 0.875rem;
    line-height: 1;
    white-space: nowrap;

    text-decoration: none;
    border: 1px solid rgba(0,0,0,0.08);
    cursor: pointer;

    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: background 0.2s ease;
    margin-top: auto;              /* Push button to bottom with consistent spacing */
  }

  .looptech-shop-btn:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  /* Decorative Elements */
  .looptech-decorative-image {
    position: absolute;
    max-width: 200px;
    max-height: 200px;
    object-fit: contain;            /* Maintain aspect ratio, fit within bounds */
    object-position: center;        /* Center the image */
    opacity: 0.6;
  }

  .looptech-shark-fin {
    position: absolute;
    right: 1rem;
    bottom: 4rem;
    opacity: 0.3;
  }

  .looptech-phones {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 0.5rem;
  }

  .looptech-phone {
    width: 3rem;
    height: 6rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    backdrop-filter: blur(4px);
  }

  .looptech-phone:first-child {
    transform: rotate(-12deg);
  }

  .looptech-phone:last-child {
    transform: rotate(6deg);
    margin-top: 1rem;
    background: rgba(255, 255, 255, 0.15);
  }

  .looptech-apple-grid {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
    opacity: 0.6;
  }

  .looptech-apple-item {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
  }

  .looptech-apple-item:nth-child(1) { width: 3rem; height: 4rem; }
  .looptech-apple-item:nth-child(2) { width: 3rem; height: 4rem; background: rgba(255, 255, 255, 0.15); }
  .looptech-apple-item:nth-child(3) { width: 3rem; height: 2.5rem; }
  .looptech-apple-item:nth-child(4) { width: 3rem; height: 3rem; border-radius: 50%; background: rgba(255, 255, 255, 0.15); }
  .looptech-apple-item:nth-child(5) { width: 3rem; height: 3.5rem; }
  .looptech-apple-item:nth-child(6) { width: 3rem; height: 2rem; background: rgba(255, 255, 255, 0.15); }

  /* Background image support for tiles */
  .looptech-promo-tile-bg {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;              /* Crop image to fill container */
    object-position: center;        /* Center the image when cropping */
    opacity: 1;                     /* Full opacity - let gradient handle darkening */
    z-index: 1;
    border-radius: 1rem;            /* Match container border radius */
  }

  /* Gradient overlay for better text visibility */
  .looptech-tile-gradient-overlay {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
    z-index: 2;
    border-radius: 1rem;
    opacity: 0.85;                  /* Semi-transparent to show image underneath */
    pointer-events: none;           /* Allow clicks to pass through */
  }

  /* Different opacity classes for gradient overlay */
  .looptech-tile-gradient-overlay.with-image {
    opacity: 0.85;
  }

  .looptech-tile-gradient-overlay.no-image {
    opacity: 1;
  }
</style>

<div class="looptech-hero">
  <div class="looptech-hero-container">

    {% for block in section.blocks %}

      {%- comment -%} Block 1: Welcome Banner (Full Width) {%- endcomment -%}
      {% if block.type == 'welcome_banner' %}
        <div class="looptech-welcome-banner" {{ block.shopify_attributes }}>

          {% if block.settings.background_image != blank %}
            {{ block.settings.background_image | image_url: width: 1400 | image_tag: class: 'looptech-welcome-banner-bg', loading: 'lazy' }}
          {% endif %}

          <div class="looptech-welcome-gradient-overlay {% if block.settings.background_image != blank %}with-image{% else %}no-image{% endif %}" style="background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);"></div>

          <div class="looptech-banner-content">
            <div class="looptech-banner-text">
              {% if block.settings.title != blank %}
                <h1 class="looptech-banner-title">{{ block.settings.title }}</h1>
              {% endif %}

              {% if block.settings.show_subtitle and block.settings.subtitle != blank %}
                <h2 class="looptech-banner-subtitle">{{ block.settings.subtitle }}</h2>
              {% endif %}

              {% if block.settings.show_description and block.settings.description != blank %}
                <p class="looptech-banner-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>
          </div>
        </div>
      {% endif %}

      {%- comment -%} Store promo tiles for grid rendering {%- endcomment -%}
      {% if block.type == 'promo_tile_horizontal' or block.type == 'promo_tile_vertical' %}
        {% unless forloop.first %}
          {% if forloop.index == 2 %}
            {%- comment -%} Start promo grid after welcome banner {%- endcomment -%}
            <div class="looptech-promo-grid">
              <div class="looptech-promo-left">
          {% endif %}
        {% endunless %}

        {%- comment -%} Horizontal Promo Tiles (Shark & Black Friday) {%- endcomment -%}
        {% if block.type == 'promo_tile_horizontal' %}
          <div class="looptech-promo-tile {{ block.settings.tile_style }}" {{ block.shopify_attributes }}>

            {% if block.settings.background_image != blank %}
              {{ block.settings.background_image | image_url: width: 800 | image_tag: class: 'looptech-promo-tile-bg', loading: 'lazy' }}
            {% endif %}

            <div class="looptech-tile-gradient-overlay {% if block.settings.background_image != blank %}with-image{% else %}no-image{% endif %}" style="background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);"></div>

            <div class="looptech-tile-content">
              <div class="looptech-tile-title">
                {% if block.settings.line_1 != blank %}
                  <span class="looptech-tile-title-line">{{ block.settings.line_1 }}</span>
                {% endif %}

                {% if block.settings.line_2 != blank %}
                  <span class="looptech-tile-title-line">{{ block.settings.line_2 }}</span>
                {% endif %}

                {% if block.settings.show_subtitle and block.settings.subtitle != blank %}
                  <span class="looptech-tile-title-sub">{{ block.settings.subtitle }}</span>
                {% endif %}
              </div>

              {%- comment -%} Decorative Elements {%- endcomment -%}
              {% if block.settings.decorative_image != blank %}
                {{ block.settings.decorative_image | image_url: width: 200 | image_tag: class: 'looptech-decorative-image', loading: 'lazy', style: 'right: 1rem; bottom: 1rem;' }}
              {% elsif block.settings.tile_style == 'looptech-tile-shark' %}
                <div class="looptech-shark-fin">
                  <svg width="100" height="80" viewBox="0 0 100 80" fill="white">
                    <path d="M50 0 L80 80 L20 80 Z"/>
                  </svg>
                </div>
              {% elsif block.settings.tile_style == 'looptech-tile-friday' %}
                <div class="looptech-phones">
                  <div class="looptech-phone"></div>
                  <div class="looptech-phone"></div>
                </div>
              {% endif %}

              {% if block.settings.show_button and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="looptech-shop-btn">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </div>
        {% endif %}

        {%- comment -%} Close left column and start right column for vertical tile {%- endcomment -%}
        {% if block.type == 'promo_tile_vertical' %}
          {%- comment -%} Close left column if it was opened {%- endcomment -%}
          {% assign has_left_tiles = false %}
          {% for b in section.blocks %}
            {% if b.type == 'promo_tile_horizontal' %}
              {% assign has_left_tiles = true %}
            {% endif %}
          {% endfor %}

          {% if has_left_tiles %}
            </div> {%- comment -%} Close looptech-promo-left {%- endcomment -%}
          {% endif %}

          {%- comment -%} Vertical Promo Tile (Apple) {%- endcomment -%}
          <div class="looptech-promo-right">
            <div class="looptech-promo-tile {{ block.settings.tile_style }} full-height" {{ block.shopify_attributes }}>

              {% if block.settings.background_image != blank %}
                {{ block.settings.background_image | image_url: width: 600 | image_tag: class: 'looptech-promo-tile-bg', loading: 'lazy' }}
              {% endif %}

              <div class="looptech-tile-gradient-overlay {% if block.settings.background_image != blank %}with-image{% else %}no-image{% endif %}" style="background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);"></div>

              <div class="looptech-tile-content">
                <div class="looptech-tile-title">
                  {% if block.settings.line_1 != blank %}
                    <span class="looptech-tile-title-line looptech-tile-title-muted">{{ block.settings.line_1 }}</span>
                  {% endif %}

                  {% if block.settings.line_2 != blank %}
                    <span class="looptech-tile-title-line looptech-handwritten">{{ block.settings.line_2 }}</span>
                  {% endif %}

                  {% if block.settings.line_3 != blank %}
                    <span class="looptech-tile-title-line looptech-tile-title-muted">{{ block.settings.line_3 }}</span>
                  {% endif %}
                </div>

                {%- comment -%} Decorative Grid or Custom Image {%- endcomment -%}
                {% if block.settings.product_grid_image != blank %}
                  {{ block.settings.product_grid_image | image_url: width: 200 | image_tag: class: 'looptech-decorative-image', loading: 'lazy', style: 'right: 1rem; top: 50%; transform: translateY(-50%);' }}
                {% else %}
                  <div class="looptech-apple-grid">
                    <div class="looptech-apple-item"></div>
                    <div class="looptech-apple-item"></div>
                    <div class="looptech-apple-item"></div>
                    <div class="looptech-apple-item"></div>
                    <div class="looptech-apple-item"></div>
                    <div class="looptech-apple-item"></div>
                  </div>
                {% endif %}

                {% if block.settings.show_button and block.settings.button_text != blank %}
                  <a href="{{ block.settings.button_link }}" class="looptech-shop-btn">{{ block.settings.button_text }}</a>
                {% endif %}
              </div>
            </div>
          </div>

          </div> {%- comment -%} Close looptech-promo-grid {%- endcomment -%}
        {% endif %}

      {% endif %}

    {% endfor %}

  </div>
</div>

