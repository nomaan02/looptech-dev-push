{% comment %}
  Looptech Hero Section - Block-Based Architecture
  =================================================
  A hero banner grid with full-width welcome banner and promotional tiles.
  Each tile is a separate block with its own editable settings.

  INSTALLATION:
  1. Copy this entire file to your theme's 'sections' folder
  2. In Shopify Admin, go to Online Store > Themes > Customize
  3. Click "Add section" and select "Looptech Hero Section"
  4. Add blocks for each tile you want to display
  5. Configure each block's settings independently

  File: sections/looptech-hero-section.liquid
{% endcomment %}

<style>
  @import url('https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700;800;900&family=Caveat:wght@500;600&display=swap');

  .looptech-hero {
    --lt-purple: 270, 60%, 25%;
    --lt-navy: 240, 40%, 15%;
    --lt-dark: 0, 0%, 10%;
    font-family: 'Inter', sans-serif;
  }

  .looptech-hero * {
    box-sizing: border-box;
  }

  .looptech-hero-container {
    max-width: {{ section.settings.container_max_width }}px;
    margin: 0 auto;
    padding: {{ section.settings.padding_top }}px {{ section.settings.padding_horizontal }}px {{ section.settings.padding_bottom }}px;
  }

  /* Full Width Welcome Banner */
  .looptech-welcome-banner {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    background: linear-gradient(135deg, hsl(var(--lt-navy)) 0%, hsl(var(--lt-purple)) 100%);
    padding: 3rem;
    min-height: 320px;
    display: flex;
    align-items: center;
  }

  .looptech-welcome-banner::before {
    content: '';
    position: absolute;
    top: 0;
    right: 25%;
    width: 24rem;
    height: 24rem;
    background: rgba(255, 255, 255, 0.05);
    border-radius: 50%;
    filter: blur(48px);
  }

  .looptech-welcome-banner::after {
    content: '';
    position: absolute;
    bottom: 0;
    left: 33%;
    width: 16rem;
    height: 16rem;
    background: rgba(167, 139, 250, 0.1);
    border-radius: 50%;
    filter: blur(32px);
  }

  .looptech-banner-content {
    position: relative;
    z-index: 10;
    display: flex;
    flex-direction: column;
    gap: 2rem;
    width: 100%;
  }

  @media (min-width: 768px) {
    .looptech-banner-content {
      flex-direction: row;
      align-items: center;
      justify-content: space-between;
    }
  }

  .looptech-banner-text {
    flex: 1;
    max-width: 32rem;
  }

  .looptech-banner-title {
    font-size: 2.5rem;
    font-weight: 700;
    color: #ffffff;
    margin: 0 0 0.5rem 0;
    line-height: 1.1;
  }

  @media (min-width: 768px) {
    .looptech-banner-title {
      font-size: 3rem;
    }
  }

  .looptech-banner-subtitle {
    font-size: 1.875rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.9);
    margin: 0 0 1rem 0;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .looptech-banner-subtitle {
      font-size: 2.25rem;
    }
  }

  .looptech-banner-description {
    color: rgba(255, 255, 255, 0.7);
    font-size: 1rem;
    line-height: 1.6;
    margin: 0;
  }

  @media (min-width: 768px) {
    .looptech-banner-description {
      font-size: 1.125rem;
    }
  }

  /* Curved Arrow */
  .looptech-arrow {
    display: none;
  }

  @media (min-width: 768px) {
    .looptech-arrow {
      display: flex;
      align-items: center;
      justify-content: center;
    }
  }

  .looptech-arrow svg {
    color: rgba(255, 255, 255, 0.6);
  }

  /* iPad Placeholder */
  .looptech-device-preview {
    flex: 1;
    max-width: 16rem;
    display: flex;
    justify-content: center;
  }

  @media (min-width: 768px) {
    .looptech-device-preview {
      justify-content: flex-end;
    }
  }

  .looptech-device-frame {
    position: relative;
    width: 16rem;
    height: 20rem;
    background: rgba(255, 255, 255, 0.1);
    backdrop-filter: blur(8px);
    border-radius: 1.5rem;
    border: 1px solid rgba(255, 255, 255, 0.2);
    padding: 0.75rem;
    box-shadow: 0 25px 50px -12px rgba(0, 0, 0, 0.25);
    transform: rotate(3deg);
    transition: transform 0.5s ease;
  }

  .looptech-device-frame:hover {
    transform: rotate(0deg);
  }

  .looptech-device-screen {
    width: 100%;
    height: 100%;
    background: linear-gradient(to bottom right, rgba(255, 255, 255, 0.2), rgba(255, 255, 255, 0.05));
    border-radius: 1rem;
    display: flex;
    align-items: center;
    justify-content: center;
    overflow: hidden;
  }

  .looptech-device-content {
    text-align: center;
  }

  .looptech-device-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
  }

  .looptech-device-logo {
    width: 4rem;
    height: 4rem;
    margin: 0 auto 0.75rem;
    border-radius: 0.75rem;
    background: rgba(255, 255, 255, 0.2);
    display: flex;
    align-items: center;
    justify-content: center;
  }

  .looptech-device-logo span {
    color: #ffffff;
    font-size: 1.5rem;
    font-weight: 700;
  }

  .looptech-device-label {
    color: rgba(255, 255, 255, 0.6);
    font-size: 0.875rem;
    margin: 0;
  }

  /* Promo Tiles Grid */
  .looptech-promo-grid {
    display: grid;
    grid-template-columns: 1fr;
    gap: {{ section.settings.tile_gap }}px;
    margin-top: {{ section.settings.tile_gap }}px;
  }

  @media (min-width: 768px) {
    .looptech-promo-grid {
      grid-template-columns: 2fr 1fr;
    }
  }

  .looptech-promo-left {
    display: flex;
    flex-direction: column;
    gap: {{ section.settings.tile_gap }}px;
  }

  .looptech-promo-right {
    height: 100%;
  }

  /* Base Promo Tile */
  .looptech-promo-tile {
    position: relative;
    overflow: hidden;
    border-radius: 1rem;
    padding: 1.5rem;
    min-height: 160px;
    display: flex;
    flex-direction: column;
    justify-content: space-between;
    cursor: pointer;
    transition: transform 0.3s ease;
  }

  .looptech-promo-tile:hover {
    transform: scale(1.02);
  }

  .looptech-promo-tile.full-height {
    height: 100%;
    min-height: 336px;
  }

  /* Shark Tile */
  .looptech-tile-shark {
    background: linear-gradient(135deg, hsl(240, 20%, 12%) 0%, hsl(240, 30%, 20%) 100%);
  }

  /* Black Friday Tile */
  .looptech-tile-friday {
    background: linear-gradient(135deg, hsl(280, 50%, 30%) 0%, hsl(270, 60%, 45%) 100%);
  }

  /* Apple Tile */
  .looptech-tile-apple {
    background: linear-gradient(135deg, hsl(220, 50%, 15%) 0%, hsl(240, 40%, 25%) 100%);
  }

  .looptech-tile-title {
    position: relative;
    z-index: 10;
    flex: 1;
  }

  .looptech-tile-title-line {
    display: block;
    font-size: 1.5rem;
    font-weight: 700;
    color: #ffffff;
    line-height: 1.2;
  }

  @media (min-width: 768px) {
    .looptech-tile-title-line {
      font-size: 1.875rem;
    }
  }

  .looptech-tile-title-sub {
    display: block;
    font-size: 1.25rem;
    font-weight: 700;
    color: rgba(255, 255, 255, 0.8);
    margin-top: 0.25rem;
  }

  .looptech-tile-title-muted {
    color: rgba(255, 255, 255, 0.9);
  }

  .looptech-handwritten {
    font-family: 'Caveat', cursive;
    font-size: 2.5rem;
  }

  @media (min-width: 768px) {
    .looptech-handwritten {
      font-size: 3rem;
    }
  }

  /* Shop Now Button */
  .looptech-shop-btn {
    position: relative;
    z-index: 10;
    display: inline-block;
    padding: 0.625rem 1.25rem;
    background: #ffffff;
    color: hsl(240, 10%, 10%);
    font-weight: 600;
    border-radius: 9999px;
    font-size: 0.875rem;
    text-decoration: none;
    border: none;
    cursor: pointer;
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    transition: background 0.2s ease;
    margin-top: 1rem;
  }

  .looptech-shop-btn:hover {
    background: rgba(255, 255, 255, 0.9);
  }

  /* Decorative Elements */
  .looptech-decorative-image {
    position: absolute;
    max-width: 200px;
    max-height: 200px;
    object-fit: contain;
    opacity: 0.6;
  }

  .looptech-shark-fin {
    position: absolute;
    right: 1rem;
    bottom: 4rem;
    opacity: 0.3;
  }

  .looptech-phones {
    position: absolute;
    right: 0.5rem;
    top: 50%;
    transform: translateY(-50%);
    display: flex;
    gap: 0.5rem;
  }

  .looptech-phone {
    width: 3rem;
    height: 6rem;
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0.75rem;
    backdrop-filter: blur(4px);
  }

  .looptech-phone:first-child {
    transform: rotate(-12deg);
  }

  .looptech-phone:last-child {
    transform: rotate(6deg);
    margin-top: 1rem;
    background: rgba(255, 255, 255, 0.15);
  }

  .looptech-apple-grid {
    position: absolute;
    right: 1rem;
    top: 50%;
    transform: translateY(-50%);
    display: grid;
    grid-template-columns: 1fr 1fr;
    gap: 0.75rem;
    opacity: 0.6;
  }

  .looptech-apple-item {
    background: rgba(255, 255, 255, 0.2);
    border-radius: 0.5rem;
  }

  .looptech-apple-item:nth-child(1) { width: 3rem; height: 4rem; }
  .looptech-apple-item:nth-child(2) { width: 3rem; height: 4rem; background: rgba(255, 255, 255, 0.15); }
  .looptech-apple-item:nth-child(3) { width: 3rem; height: 2.5rem; }
  .looptech-apple-item:nth-child(4) { width: 3rem; height: 3rem; border-radius: 50%; background: rgba(255, 255, 255, 0.15); }
  .looptech-apple-item:nth-child(5) { width: 3rem; height: 3.5rem; }
  .looptech-apple-item:nth-child(6) { width: 3rem; height: 2rem; background: rgba(255, 255, 255, 0.15); }

  /* Background image support for tiles */
  .looptech-promo-tile-bg {
    position: absolute;
    top: 0;
    left: 0;
    width: 100%;
    height: 100%;
    object-fit: cover;
    opacity: 0.3;
    z-index: 1;
  }

  .looptech-promo-tile > * {
    position: relative;
    z-index: 2;
  }
</style>

<div class="looptech-hero">
  <div class="looptech-hero-container">

    {% for block in section.blocks %}

      {%- comment -%} Block 1: Welcome Banner (Full Width) {%- endcomment -%}
      {% if block.type == 'welcome_banner' %}
        <div class="looptech-welcome-banner" {{ block.shopify_attributes }} style="background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);">
          <div class="looptech-banner-content">

            {%- comment -%} Left Content {%- endcomment -%}
            <div class="looptech-banner-text">
              {% if block.settings.title != blank %}
                <h1 class="looptech-banner-title">{{ block.settings.title }}</h1>
              {% endif %}

              {% if block.settings.show_subtitle and block.settings.subtitle != blank %}
                <h2 class="looptech-banner-subtitle">{{ block.settings.subtitle }}</h2>
              {% endif %}

              {% if block.settings.show_description and block.settings.description != blank %}
                <p class="looptech-banner-description">{{ block.settings.description }}</p>
              {% endif %}
            </div>

            {%- comment -%} Curved Arrow {%- endcomment -%}
            {% if block.settings.show_arrow %}
              <div class="looptech-arrow">
                <svg width="120" height="80" viewBox="0 0 120 80" fill="none">
                  <path d="M10 60 Q 60 10 110 40" stroke="currentColor" stroke-width="3" stroke-linecap="round" fill="none"/>
                  <path d="M100 30 L 110 40 L 98 48" stroke="currentColor" stroke-width="3" stroke-linecap="round" stroke-linejoin="round" fill="none"/>
                </svg>
              </div>
            {% endif %}

            {%- comment -%} Device Preview {%- endcomment -%}
            {% if block.settings.show_device %}
              <div class="looptech-device-preview">
                <div class="looptech-device-frame">
                  <div class="looptech-device-screen">
                    {% if block.settings.device_image != blank %}
                      {{ block.settings.device_image | image_url: width: 256 | image_tag: class: 'looptech-device-image', loading: 'lazy' }}
                    {% else %}
                      <div class="looptech-device-content">
                        <div class="looptech-device-logo">
                          <span>{{ block.settings.device_logo_letter }}</span>
                        </div>
                        <p class="looptech-device-label">{{ block.settings.device_label }}</p>
                      </div>
                    {% endif %}
                  </div>
                </div>
              </div>
            {% endif %}

          </div>
        </div>
      {% endif %}

      {%- comment -%} Store promo tiles for grid rendering {%- endcomment -%}
      {% if block.type == 'promo_tile_horizontal' or block.type == 'promo_tile_vertical' %}
        {% unless forloop.first %}
          {% if forloop.index == 2 %}
            {%- comment -%} Start promo grid after welcome banner {%- endcomment -%}
            <div class="looptech-promo-grid">
              <div class="looptech-promo-left">
          {% endif %}
        {% endunless %}

        {%- comment -%} Horizontal Promo Tiles (Shark & Black Friday) {%- endcomment -%}
        {% if block.type == 'promo_tile_horizontal' %}
          <div class="looptech-promo-tile {{ block.settings.tile_style }}" {{ block.shopify_attributes }} style="background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);">

            {% if block.settings.background_image != blank %}
              {{ block.settings.background_image | image_url: width: 800 | image_tag: class: 'looptech-promo-tile-bg', loading: 'lazy' }}
            {% endif %}

            <div class="looptech-tile-title">
              {% if block.settings.line_1 != blank %}
                <span class="looptech-tile-title-line">{{ block.settings.line_1 }}</span>
              {% endif %}

              {% if block.settings.line_2 != blank %}
                <span class="looptech-tile-title-line">{{ block.settings.line_2 }}</span>
              {% endif %}

              {% if block.settings.show_subtitle and block.settings.subtitle != blank %}
                <span class="looptech-tile-title-sub">{{ block.settings.subtitle }}</span>
              {% endif %}
            </div>

            {%- comment -%} Decorative Elements {%- endcomment -%}
            {% if block.settings.decorative_image != blank %}
              {{ block.settings.decorative_image | image_url: width: 200 | image_tag: class: 'looptech-decorative-image', loading: 'lazy', style: 'right: 1rem; bottom: 1rem;' }}
            {% elsif block.settings.tile_style == 'looptech-tile-shark' %}
              <div class="looptech-shark-fin">
                <svg width="100" height="80" viewBox="0 0 100 80" fill="white">
                  <path d="M50 0 L80 80 L20 80 Z"/>
                </svg>
              </div>
            {% elsif block.settings.tile_style == 'looptech-tile-friday' %}
              <div class="looptech-phones">
                <div class="looptech-phone"></div>
                <div class="looptech-phone"></div>
              </div>
            {% endif %}

            {% if block.settings.show_button and block.settings.button_text != blank %}
              <a href="{{ block.settings.button_link }}" class="looptech-shop-btn">{{ block.settings.button_text }}</a>
            {% endif %}
          </div>
        {% endif %}

        {%- comment -%} Close left column and start right column for vertical tile {%- endcomment -%}
        {% if block.type == 'promo_tile_vertical' %}
          {%- comment -%} Close left column if it was opened {%- endcomment -%}
          {% assign has_left_tiles = false %}
          {% for b in section.blocks %}
            {% if b.type == 'promo_tile_horizontal' %}
              {% assign has_left_tiles = true %}
            {% endif %}
          {% endfor %}

          {% if has_left_tiles %}
            </div> {%- comment -%} Close looptech-promo-left {%- endcomment -%}
          {% endif %}

          {%- comment -%} Vertical Promo Tile (Apple) {%- endcomment -%}
          <div class="looptech-promo-right">
            <div class="looptech-promo-tile {{ block.settings.tile_style }} full-height" {{ block.shopify_attributes }} style="background: linear-gradient(135deg, {{ block.settings.gradient_start }} 0%, {{ block.settings.gradient_end }} 100%);">

              {% if block.settings.background_image != blank %}
                {{ block.settings.background_image | image_url: width: 600 | image_tag: class: 'looptech-promo-tile-bg', loading: 'lazy' }}
              {% endif %}

              <div class="looptech-tile-title">
                {% if block.settings.line_1 != blank %}
                  <span class="looptech-tile-title-line looptech-tile-title-muted">{{ block.settings.line_1 }}</span>
                {% endif %}

                {% if block.settings.line_2 != blank %}
                  <span class="looptech-tile-title-line looptech-handwritten">{{ block.settings.line_2 }}</span>
                {% endif %}

                {% if block.settings.line_3 != blank %}
                  <span class="looptech-tile-title-line looptech-tile-title-muted">{{ block.settings.line_3 }}</span>
                {% endif %}
              </div>

              {%- comment -%} Decorative Grid or Custom Image {%- endcomment -%}
              {% if block.settings.product_grid_image != blank %}
                {{ block.settings.product_grid_image | image_url: width: 200 | image_tag: class: 'looptech-decorative-image', loading: 'lazy', style: 'right: 1rem; top: 50%; transform: translateY(-50%);' }}
              {% else %}
                <div class="looptech-apple-grid">
                  <div class="looptech-apple-item"></div>
                  <div class="looptech-apple-item"></div>
                  <div class="looptech-apple-item"></div>
                  <div class="looptech-apple-item"></div>
                  <div class="looptech-apple-item"></div>
                  <div class="looptech-apple-item"></div>
                </div>
              {% endif %}

              {% if block.settings.show_button and block.settings.button_text != blank %}
                <a href="{{ block.settings.button_link }}" class="looptech-shop-btn">{{ block.settings.button_text }}</a>
              {% endif %}
            </div>
          </div>

          </div> {%- comment -%} Close looptech-promo-grid {%- endcomment -%}
        {% endif %}

      {% endif %}

    {% endfor %}

  </div>
</div>

{% schema %}
{
  "name": "Looptech Hero Section",
  "tag": "section",
  "class": "looptech-hero-wrapper",
  "settings": [
    {
      "type": "header",
      "content": "Container Settings"
    },
    {
      "type": "range",
      "id": "container_max_width",
      "label": "Maximum Container Width",
      "min": 1000,
      "max": 1600,
      "step": 50,
      "default": 1400,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_top",
      "label": "Top Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_bottom",
      "label": "Bottom Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 32,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "padding_horizontal",
      "label": "Horizontal Padding",
      "min": 0,
      "max": 100,
      "step": 4,
      "default": 16,
      "unit": "px"
    },
    {
      "type": "range",
      "id": "tile_gap",
      "label": "Gap Between Tiles",
      "min": 8,
      "max": 32,
      "step": 4,
      "default": 16,
      "unit": "px"
    }
  ],
  "blocks": [
    {
      "type": "welcome_banner",
      "name": "Welcome Banner",
      "limit": 1,
      "settings": [
        {
          "type": "header",
          "content": "Text Content"
        },
        {
          "type": "text",
          "id": "title",
