{% comment %}
  Mega Menu Icons Snippet
  Copy to snippets/mega-menu-icons.liquid
  
  Usage:
  {% render 'mega-menu-icons', icon: 'chevron-down' %}
{% endcomment %}

{% case icon %}
{% when 'chevron-down' %}
  <svg class="mega-menu-chevron" xmlns="http://www.w3.org/2000/svg" width="16" height="16" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="m6 9 6 6 6-6"/>
  </svg>

{% when 'menu' %}
  <svg class="mega-menu-mobile-icon menu-icon" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <line x1="4" x2="20" y1="12" y2="12"/>
    <line x1="4" x2="20" y1="6" y2="6"/>
    <line x1="4" x2="20" y1="18" y2="18"/>
  </svg>

{% when 'close' %}
  <svg class="mega-menu-mobile-icon close-icon mega-menu-hidden" xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round">
    <path d="M18 6 6 18"/>
    <path d="m6 6 12 12"/>
  </svg>
{% endcase %}
